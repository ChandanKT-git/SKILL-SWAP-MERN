{
    "name": "skillswap-backend",
    "version": "1.0.0",
    "description": "SkillSwap API server built with Express and MongoDB",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.js",
        "lint:fix": "eslint src/**/*.js --fix",
        "format": "prettier --write src/**/*.js"
    },
    "keywords": [
        "skillswap",
        "mern",
        "express",
        "mongodb",
        "api"
    ],
    "author": "SkillSwap Team",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cloudinary": "^1.41.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^6.10.0",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.6.3",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.7",
        "socket.io": "^4.7.4"
    },
    "devDependencies": {
        "@types/jest": "^29.5.7",
        "eslint": "^8.52.0",
        "eslint-config-node": "^4.1.0",
        "eslint-plugin-node": "^11.1.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^10.2.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/server.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    }
}
