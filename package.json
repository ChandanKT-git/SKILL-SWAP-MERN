        "nodemailer": "^6.9.4",
        "multer": "^1.4.5-lts.1",
        "morgan": "^1.10.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "socket.io": "^4.7.2",
        "express-validator": "^7.0.1"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "concurrently": "^8.2.0"
    }
}